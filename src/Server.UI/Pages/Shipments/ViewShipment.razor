@page "/pages/Shipments/view/{id:int}"
@using CleanArchitecture.Blazor.Application.Features.Shipments.Commands.Delete
@using CleanArchitecture.Blazor.Application.Features.Shipments.DTOs
@using CleanArchitecture.Blazor.Application.Features.Shipments.Queries.GetById
@inherits MudComponentBase
@inject IStringLocalizer<Shipments> L

<PageTitle>@Title</PageTitle>
<Breadcrumbs  OnGoEditClick="GoEdit" OnDeleteClick="Delete" BreadcrumbItems="_breadcrumbItems"></Breadcrumbs>
<MudContainer Class="mt-3" MaxWidth="MaxWidth.Small">
@if (model != null)
{
    <MudCard Class="pa-2">
        <MudCardHeader>
            <CardHeaderContent>
                 <MudText Typo="Typo.h6">@Title</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid Spacing="3" Class="readonly-grid">
                <MudItem xs="12" md="6"> 
                        <ReadOnlyFieldX6 Label="@L[model.GetMemberDescription(x=>x.ShipmentNo)]" Value="model.ShipmentNo"></ReadOnlyFieldX6>
                </MudItem> 
<MudItem xs="12" md="6"> 
                        <ReadOnlyFieldX6 Label="@L[model.GetMemberDescription(x=>x.ShipmentStatus)]" Value="model.ShipmentStatus"></ReadOnlyFieldX6>
                </MudItem> 
<MudItem xs="12" md="6"> 
                        <ReadOnlyFieldX6 Label="@L[model.GetMemberDescription(x=>x.StartLocation)]" Value="model.StartLocation"></ReadOnlyFieldX6>
                </MudItem> 
<MudItem xs="12" md="6"> 
                        <ReadOnlyFieldX6 Label="@L[model.GetMemberDescription(x=>x.EndLocation)]" Value="model.EndLocation"></ReadOnlyFieldX6>
                </MudItem> 
<MudItem xs="12" md="6"> 
                        <ReadOnlyFieldX6 Label="@L[model.GetMemberDescription(x=>x.Price)]" Value="model.Price"></ReadOnlyFieldX6>
                </MudItem> 
                    <MudItem xs="12" md="6">
                        <ReadOnlyFieldX6 Label="@L[model.GetMemberDescription(x => x.IsBidable)]" Value="model.IsBidable"></ReadOnlyFieldX6>
                    </MudItem>

                    <MudItem xs="12" md="6">
                        <ReadOnlyFieldX6 Label="@L[model.GetMemberDescription(x => x.RecVehicleType)]" Value="model.RecVehicleType"></ReadOnlyFieldX6>
                    </MudItem>


                    <MudItem xs="12" md="6">
                        <ReadOnlyFieldX6 Label="@L[model.GetMemberDescription(x => x.VehicleId)]" Value="model.VehicleId"></ReadOnlyFieldX6>
                    </MudItem>

            </MudGrid>
        </MudCardContent>
        <MudCardActions></MudCardActions>
    </MudCard>
 }
</MudContainer>
 

@code {
    public string? Title { get; private set; }
    [Parameter]
    public int Id { get; set; }
    private List<BreadcrumbItem> _breadcrumbItems = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Home", href: "/"),
        new BreadcrumbItem("Shipments", href: "/pages/Shipments")
    };
    private ShipmentDto? model;
    protected override async Task OnInitializedAsync()
    {
        Title = L["Shipment"];
        var result = await Mediator.Send(new GetShipmentByIdQuery() { Id = Id });
        result.Map(data =>
        {
            model = data;
            return data;
        }).Match(data =>
        {
            _breadcrumbItems.Add(new BreadcrumbItem(data.ShipmentNo, null, disabled: true));
            return data;

        }, errors =>
        {
            Snackbar.Add(errors, MudBlazor.Severity.Error);
            return null!;
        });

    }
    void GoEdit()
    {
        Navigation.NavigateTo($"/pages/Shipments/edit/{Id}");
    }
    async Task Delete()
    {
        var contentText = string.Format(ConstantString.DeleteConfirmation, model.ShipmentNo);
        var command = new DeleteShipmentCommand(new int[] { model.Id });
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText, async () =>
        {
            await InvokeAsync(() =>
            {
                Navigation.NavigateTo($"/pages/Shipments");
            });
        });
    }
}
