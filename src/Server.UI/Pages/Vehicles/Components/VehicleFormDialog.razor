@using CleanArchitecture.Blazor.Application.Features.Vehicles.Commands.AddEdit
@using CleanArchitecture.Blazor.Server.UI.Pages.VehicleTypes

@inherits MudComponentBase
@inject IValidationService Validator
@inject IStringLocalizer<Vehicles> L

<MudDialog>
    <DialogContent>
        <MudForm Model="@model" @ref="@_form" Validation="@(Validator.ValidateValue(model))">
            <MudGrid>
                   <MudItem xs="12" md="12">
                        <VehicleTypes @bind-TrackingUnitModelId="model.VehicleTypeId"></VehicleTypes>

                    </MudItem>
        
                 

                <MudItem xs="12" md="12"> 
                        <MudTextField Label="@L[model.GetMemberDescription(x => x.VehicleNo)]" @bind-Value="model.VehicleNo" For="@(() => model.VehicleNo)" Required="true" RequiredError="@L["VehicleNo is required!"]"></MudTextField>
                </MudItem> 
 
                    <MudItem xs="12" md="12">
                        <MudTextField Label="@L[model.GetMemberDescription(x => x.DriverId)]" For="@(() => model.DriverId)" @bind-Value="model.DriverId"></MudTextField>
                    </MudItem>

            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@ConstantString.Cancel</MudButton>
        <MudLoadingButton Loading="@_savingnew" OnClick="SaveAndNew">@ConstantString.SaveAndNew</MudLoadingButton>
        <MudLoadingButton Loading="@_saving"  OnClick="Submit">@ConstantString.Save</MudLoadingButton>
    </DialogActions>
</MudDialog>

@code {
    MudForm? _form;
    private bool _saving = false;
    private bool _savingnew = false;
    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; } = default!;
    AddEditVehicleCommandValidator _modelValidator = new ();
    [EditorRequired] [Parameter] public AddEditVehicleCommand model { get; set; } = null!;
    async Task Submit()
    {
        try
        {
            _saving = true;
            await _form!.Validate().ConfigureAwait(false);
            if (!_form!.IsValid)
                return;
            var result = await Mediator.Send(model);
            result.Match(data =>
            {
                MudDialog.Close(DialogResult.Ok(true));
                Snackbar.Add(ConstantString.SaveSuccess, MudBlazor.Severity.Info);
                return data;
            }, errors =>
            {
                Snackbar.Add(errors, MudBlazor.Severity.Error);
                return -1;
            });
        }
        finally
        {
            _saving = false;
        }
    }
    async Task SaveAndNew()
    {
        try
        {
            _savingnew = true;
            await _form!.Validate().ConfigureAwait(false);
            if (!_form!.IsValid)
               return;
            var result = await Mediator.Send(model);
            await result.MatchAsync(async data =>
            {
                Snackbar.Add(ConstantString.SaveSuccess, MudBlazor.Severity.Info);
                await Task.Delay(300);
                model = new AddEditVehicleCommand() { };
                return data;
            }, errors =>
            {
                Snackbar.Add(errors, MudBlazor.Severity.Error);
                return Task.FromResult(-1);
            });
        }
        finally
        {
            _savingnew = false;
        }
    }
    void Cancel() => MudDialog.Cancel();
}