        var result = await Mediator.Send(query);

        if (result.Succeeded)
        {
            await BlazorDownloadFileService.DownloadFile($"{dto.InvNo}.pdf", result.Data, "application/octet-stream");
            Snackbar.Add($"{ConstantString.ExportSuccess}", Severity.Info);
