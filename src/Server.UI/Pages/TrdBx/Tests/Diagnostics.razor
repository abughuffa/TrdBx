@page "/pages/TrdBx/Diagnostics"

@using CleanArchitecture.Blazor.Application.Features.Diagnostics.Caching
@using CleanArchitecture.Blazor.Application.Features.Diagnostics.DTOs
@using CleanArchitecture.Blazor.Application.Features.Diagnostics.Queries.Export
@using CleanArchitecture.Blazor.Application.Features.Diagnostics.Queries.Pagination
@using CleanArchitecture.Blazor.Application.Features.Diagnostics.Specifications
@using CleanArchitecture.Blazor.Server.UI.Pages.TrdBx.Tests.Components

@inject IStringLocalizer<Diagnostics> L
@attribute [Authorize(Policy = Infrastructure.PermissionSet.Permissions.Diagnostics.View)]

<PageTitle>@Title</PageTitle>

<AdvancedSearchDiagnostics TRequest="Query" OnConditionChanged="ConditionChanged"></AdvancedSearchDiagnostics>

<MudDataGrid ServerData="@(ServerReload)"
             FixedHeader="true"
             FixedFooter="false"
             @bind-RowsPerPage="_defaultPageSize"
             Loading="@_loading"
             MultiSelection="true"
             @bind-SelectedItems="_selectedItems"
             ColumnResizeMode="ResizeMode.Column"
             Hover="true" @ref="_table"
             RowStyleFunc="@rowStyleFunc">
             
    <ToolBarContent>
        <MudStack Row Spacing="0" Class="flex-grow-1" Justify="Justify.SpaceBetween">
            <MudStack Row AlignItems="AlignItems.Start">
                <MudIcon Icon="@Icons.Material.Filled.Window" Size="Size.Large" />
                <MudStack Spacing="0">
                    <MudText Typo="Typo.subtitle2" Class="mb-2">@Title</MudText>
                    <MudEnumSelect Style="min-width:120px" TEnum="DiagnosticListView" ValueChanged="OnChangedListView" Value="Query.ListView" Dense="true" Label="@L["List View"]">
                    </MudEnumSelect>
                </MudStack>
            </MudStack>
            <MudStack Spacing="0" AlignItems="AlignItems.End">
                <MudToolBar Dense WrapContent="true" Class="py-1 px-0">
                    <MudButton Disabled="@_loading"
                               OnClick="@(() => OnRefresh())"
                               StartIcon="@Icons.Material.Outlined.Refresh">
                        @ConstantString.Refresh
                    </MudButton>
                    @if (_canExport)
                    {
                        <MudLoadingButton Disabled="@_exporting"
                                          Loading="_exporting"
                                          OnClick="@(() => OnExport())"
                                          StartIcon="@Icons.Custom.FileFormats.FileExcel">
                            Export
                        </MudLoadingButton>
                    }
                </MudToolBar>
                <MudStack Row Spacing="1">
                    @if (_canSearch)
                    {
                        <MudTextField T="string" ValueChanged="@(s => OnSearch(s))" Value="@Query.Keyword" Placeholder="@ConstantString.Search" Adornment="Adornment.End"
                                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Small">
                        </MudTextField>
                    }
                </MudStack>
            </MudStack>
        </MudStack>
    </ToolBarContent>
    <Columns>
        <SelectColumn ShowInFooter="false"></SelectColumn>

        @*TODO: Define the fields that should be displayed in data table*@
        <PropertyColumn Property="x => x.UnitSNo" Title="@L[_currentDto.GetMemberDescription(x=>x.UnitSNo)]" />
        <PropertyColumn Property="x => x.SimCardNo" Title="@L[_currentDto.GetMemberDescription(x=>x.SimCardNo)]" />
        <PropertyColumn Property="x => x.StatusOnWialon" Title="@L[_currentDto.GetMemberDescription(x=>x.StatusOnWialon)]" Groupable="true" />
        <PropertyColumn Property="x => x.StatusOnTrdBx" Title="@L[_currentDto.GetMemberDescription(x=>x.StatusOnTrdBx)]" Groupable="true" />
        <PropertyColumn Property="x => x.SimCardStatus" Title="@L[_currentDto.GetMemberDescription(x=>x.SimCardStatus)]" Groupable="true" />
        <PropertyColumn Property="x => x.LDExDate" Title="@L[_currentDto.GetMemberDescription(x => x.LDExDate)]" Groupable="true" />
        <PropertyColumn Property="x => x.LDOExpired" Title="@L[_currentDto.GetMemberDescription(x=>x.LDOExpired)]" Groupable="true" />
        <PropertyColumn Property="x => x.Account" Title="@L[_currentDto.GetMemberDescription(x=>x.Account)]" Groupable="true" />
        <PropertyColumn Property="x => x.Client" Title="@L[_currentDto.GetMemberDescription(x=>x.Client)]" Groupable="true" />
        <PropertyColumn Property="x => x.Customer" Title="@L[_currentDto.GetMemberDescription(x=>x.Customer)]" Groupable="true" />
        <PropertyColumn Property="x => x.WNote" Title="@L[_currentDto.GetMemberDescription(x=>x.WNote)]" />
        <PropertyColumn Property="x => x.Balance" Title="@L[_currentDto.GetMemberDescription(x=>x.Balance)]" Sortable="false" />

    </Columns>
    <NoRecordsContent>
        <MudText>@ConstantString.NoRecords</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>@ConstantString.Loading</MudText>
    </LoadingContent>
    <PagerContent>
        <MudDataGridPager PageSizeOptions="@(new int[]{15,50,100,500,1000,1500,2000,2500})" />
    </PagerContent>
</MudDataGrid>



@code {

    [CascadingParameter]
    private Task<AuthenticationState> AuthState { get; set; } = default!;
    [CascadingParameter]
    private UserProfile? UserProfile { get; set; }
    public string? Title { get; private set; }
    private HashSet<DiagnosticDto> _selectedItems = new();
    private MudDataGrid<DiagnosticDto> _table = default!;
    private DiagnosticDto _currentDto = new();
    // private DiagnosticsAccessRights _accessRights = new();
    private int _defaultPageSize = 15;
    private bool _loading;
    private bool _exporting;

    private DiagnosticsWithPaginationQuery Query { get; set; } = new();



    private void ConditionChanged(string s)
    {
        InvokeAsync(_table.ReloadServerData);
    
    }
    private void IntConditionChanged(int s)
    {
        InvokeAsync(_table.ReloadServerData);
    }
    private Func<DiagnosticDto, int, string> rowStyleFunc => (x, i) =>
    {
        if ((x.StatusOnWialon == "Active" && x.StatusOnTrdBx == "Active")
         || (x.StatusOnWialon == "Active" && x.StatusOnTrdBx == "ActiveGprs")
         || (x.StatusOnWialon == "Inactive" && x.StatusOnTrdBx == "ActiveHosting"))
            return "background-color:#d6ffff";
        else if ((x.StatusOnWialon == "Active" && x.StatusOnTrdBx == "ActiveHosting")
         || (x.StatusOnWialon == "Active" && x.StatusOnTrdBx == "Inactive")
         || (x.StatusOnWialon == "Inactive" && x.StatusOnTrdBx == "Inactive"))
            return "background-color:#ffff8a";
        else if (x.StatusOnWialon == "Inactive" && x.StatusOnTrdBx == "Inactive")
            return "background-color:#FFD6FF";
        else
            return "background-color:#ffffff";
    };
    [Inject]
    private IBlazorDownloadFileService BlazorDownloadFileService { get; set; } = null!;

    private bool _canExport;
    private bool _canSearch;
    // private bool _canDelete;


    protected override async Task OnInitializedAsync()
    {
        Title = L[_currentDto.GetClassDescription()];
        var state = await AuthState;
        _canExport = (await AuthService.AuthorizeAsync(state.User, Permissions.DbMatchings.Export)).Succeeded;
        _canSearch = (await AuthService.AuthorizeAsync(state.User, Permissions.DbMatchings.Search)).Succeeded;
        // _canDelete = (await AuthService.AuthorizeAsync(state.User, Permissions.DbMatchings.Delete)).Succeeded;


    }
    // protected override async Task OnInitializedAsync()
    // {
    //     Title = Title = "Diagnostics";// L[_currentDto.GetClassDescription()];
    //     _accessRights = await PermissionService.GetAccessRightsAsync<DiagnosticsAccessRights>();

    // }
    private async Task<GridData<DiagnosticDto>> ServerReload(GridState<DiagnosticDto> state)
    {
        try
        {
            _loading = true;
            Query.OrderBy = state.SortDefinitions.FirstOrDefault()?.SortBy ?? "SimCardNo";
            Query.SortDirection = state.SortDefinitions.FirstOrDefault()?.Descending ?? true
                                              ? SortDirection.Descending.ToString()
                                              : SortDirection.Ascending.ToString();
            Query.PageNumber = state.Page + 1;
            Query.PageSize = state.PageSize;
            var result = await Mediator.Send(Query).ConfigureAwait(false);
            return new GridData<DiagnosticDto> { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }

    }
    private async Task OnSearch(string text)
    {
        _selectedItems = new HashSet<DiagnosticDto>();
        Query.Keyword = text;
        await _table.ReloadServerData();
    }
    private async Task OnChangedListView(DiagnosticListView listview)
    {
        Query.ListView = listview;
        await _table.ReloadServerData();
    }
    private async Task OnRefresh()
    {
        DiagnosticCacheKey.Refresh();
        _selectedItems = new HashSet<DiagnosticDto>();
        Query.Keyword = string.Empty;
        await _table.ReloadServerData();
    }


    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportDiagnosticsQuery()
            {
                Keyword = Query.Keyword,
                ListView = Query.ListView,
                ExpiersBefore = Query.ExpiersBefore,
                StatusOnWialon = Query.StatusOnWialon,
                StatusOnTrdBx = Query.StatusOnTrdBx,
                SimCardStatus = Query.SimCardStatus,
                OrderBy = _table.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "SimCardNo",
                SortDirection = _table.SortDefinitions.Values.FirstOrDefault()?.Descending ?? false
                                        ? SortDirection.Descending.ToString()
                                        : SortDirection.Ascending.ToString(),

            };
        var result = await Mediator.Send(request);

           if (result.Succeeded)
        {
            await BlazorDownloadFileService.DownloadFile($"Diagnostics - {Query.ListView.ToString()}.xlsx", result.Data!, "application/octet-stream");
            Snackbar.Add($"{ConstantString.ExportSuccess}", Severity.Info);
        }
        else
        {
            Snackbar.Add($"{result.ErrorMessage}", Severity.Error);
        }


        _exporting = false;
    }


}
