@page "/pages/TrdBx/LibyanaSimCards"


@using CleanArchitecture.Blazor.Application.Features.LibyanaSimCards.Caching
@using CleanArchitecture.Blazor.Application.Features.LibyanaSimCards.Commands.Delete
@using CleanArchitecture.Blazor.Application.Features.LibyanaSimCards.Commands.Import
@using CleanArchitecture.Blazor.Application.Features.LibyanaSimCards.DTOs
@using CleanArchitecture.Blazor.Application.Features.LibyanaSimCards.Queries.Export
@using CleanArchitecture.Blazor.Application.Features.LibyanaSimCards.Queries.Pagination
@using CleanArchitecture.Blazor.Application.Features.LibyanaSimCards.Specifications

@inject IStringLocalizer<LibyanaSimCards> L
@attribute [Authorize(Policy = Infrastructure.PermissionSet.Permissions.LibyanaSimCards.View)]

<PageTitle>@Title</PageTitle>
<style>
    .mud-table-toolbar {
        height: 120px !important;
    }
</style>

<MudDataGrid ServerData="@(ServerReload)"
             FixedHeader="true"
             FixedFooter="false"
             @bind-RowsPerPage="_defaultPageSize"
             Loading="@_loading"
             MultiSelection="true"
             @bind-SelectedItems="_selectedItems"
             ColumnResizeMode="ResizeMode.Column"
             Hover="true" @ref="_table">
           @*   FixedHeader="true"
             FixedFooter="true"
             Virtualize="true"
             @bind-RowsPerPage="_defaultPageSize"
             Height="calc(100vh - 330px)"
             Loading="@_loading"
             MultiSelection="true"
             T="LibyanaSimCardDto"
             SelectOnRowClick="false"
             @bind-SelectedItems="_selectedItems"
             @bind-SelectedItem="_currentDto"
             Hover="true" @ref="_table"> *@
    <ToolBarContent>
        <MudStack Row Spacing="0" Class="flex-grow-1" Justify="Justify.SpaceBetween">
            <MudStack Row AlignItems="AlignItems.Start">
                <MudIcon Icon="@Icons.Material.Filled.Window" Size="Size.Large" />
                <MudStack Spacing="0">
                    <MudText Typo="Typo.subtitle2" Class="mb-2">@Title</MudText>
                    <MudEnumSelect Style="min-width:120px" TEnum="LibyanaSimCardListView" ValueChanged="OnChangedListView" Value="Query.ListView" Dense="true" Label="@L["List View"]">
                    </MudEnumSelect>
                </MudStack>
            </MudStack>
            <MudStack Spacing="0" AlignItems="AlignItems.End">
                <MudToolBar Dense WrapContent="true" Class="py-1 px-0">
                    <MudButton Disabled="@_loading"
                               OnClick="@(() => OnRefresh())"
                               StartIcon="@Icons.Material.Outlined.Refresh">
                        @ConstantString.Refresh
                    </MudButton>
                    @if (_canImport)
                    {
                            <MudFileUpload T="IBrowserFile" FilesChanged="OnImportData" Accept=".xlsx">
                                <ActivatorContent>
                                    <MudLoadingButton Class="pa-0 ma-0" Style="font-weight:400;text-transform:none;"
                                                      Variant="Variant.Text"
                                                      Loading="@_uploading"
                                                  StartIcon="@Icons.Custom.FileFormats.FileExcel">
                                        Import
                                    </MudLoadingButton>
                                </ActivatorContent>
                            </MudFileUpload>
                    }
                    @if (_canExport)
                    {
                        <MudLoadingButton Disabled="@_exporting"
                                          Loading="_exporting"
                                          OnClick="@(() => OnExport())"
                                          StartIcon="@Icons.Custom.FileFormats.FileExcel">
                            Export
                        </MudLoadingButton>
                    }
                    @if (_canDelete)
                    {
                        <MudButton Disabled="@(!(_selectedItems.Count > 0))"
                                   OnClick="@(() => OnDeleteChecked())"
                                   IconColor="Color.Error"
                                   Variant="Variant.Text"
                                   Color="Color.Error"
                                   StartIcon="@Icons.Material.Outlined.Delete">

                            @ConstantString.Delete
                        </MudButton>
                    }
                </MudToolBar>
                <MudStack Row Spacing="1">
                    @if (_canSearch)
                    {
                        <MudTextField T="string" ValueChanged="@(s => OnSearch(s))" 
                            Value="@Query.Keyword" Placeholder="@ConstantString.Search" 
                            Adornment="Adornment.End"
                            AdornmentIcon="@Icons.Material.Filled.Search" 
                            IconSize="Size.Small">
                        </MudTextField>
                    }
                </MudStack>
            </MudStack>
        </MudStack>
    </ToolBarContent>
             <Columns>
                <SelectColumn ShowInFooter="false"></SelectColumn>
                @*TODO: Define the fields that should be displayed in data table*@
                <PropertyColumn Property="x => x.SimCardNo" Title="@L[_currentDto.GetMemberDescription(x=>x.SimCardNo)]" />
        <PropertyColumn Property="x => x.SimCardStatus" Title="@L[_currentDto.GetMemberDescription(x=>x.SimCardStatus)]" Groupable="true" />
                <PropertyColumn Property="x => x.Balance" Title="@L[_currentDto.GetMemberDescription(x=>x.Balance)]" />
                <PropertyColumn Property="x => x.BExDate" Title="@L[_currentDto.GetMemberDescription(x=>x.BExDate)]" />
                <PropertyColumn Property="x => x.JoinDate" Title="@L[_currentDto.GetMemberDescription(x=>x.JoinDate)]" />
                <PropertyColumn Property="x => x.Package" Title="@L[_currentDto.GetMemberDescription(x=>x.Package)]" />
                <PropertyColumn Property="x => x.DExDate" Title="@L[_currentDto.GetMemberDescription(x=>x.DExDate)]" />
                <PropertyColumn Property="x => x.DataOffer" Title="@L[_currentDto.GetMemberDescription(x=>x.DataOffer)]" />
                <PropertyColumn Property="x => x.DOExpired" Title="@L[_currentDto.GetMemberDescription(x=>x.DOExpired)]" />
            </Columns>
    <NoRecordsContent>
        <MudText>@ConstantString.NoRecords</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>@ConstantString.Loading</MudText>
    </LoadingContent>
    <PagerContent>
        <MudDataGridPager PageSizeOptions="@(new int[]{15,50,100,500,1000,1500,2000,2500})" />
    </PagerContent>
</MudDataGrid>



@code {

    [CascadingParameter]
    private Task<AuthenticationState> AuthState { get; set; } = default!;
    [CascadingParameter]
    private UserProfile? UserProfile { get; set; }
    public string? Title { get; private set; }
    private HashSet<LibyanaSimCardDto> _selectedItems = new();
    private MudDataGrid<LibyanaSimCardDto> _table = default!;
    private LibyanaSimCardDto _currentDto = new();
    // private LibyanaSimCardsAccessRights _accessRights = new();
    private int _defaultPageSize = 15;
    private bool _loading;
    private bool _uploading;
    private bool _exporting;



    private LibyanaSimCardsWithPaginationQuery Query { get; set; } = new();
    [Inject]
    private IBlazorDownloadFileService BlazorDownloadFileService { get; set; } = null!;
    private bool _canSearch;
    private bool _canCreate;
    private bool _canDelete;

    private bool _canImport;
    private bool _canExport;


    protected override async Task OnInitializedAsync()
    {
        Title = L[_currentDto.GetClassDescription()];
        var state = await AuthState;

        _canSearch = (await AuthService.AuthorizeAsync(state.User, Permissions.LibyanaSimCards.Search)).Succeeded;
        _canDelete = (await AuthService.AuthorizeAsync(state.User, Permissions.LibyanaSimCards.Delete)).Succeeded;

        _canImport = (await AuthService.AuthorizeAsync(state.User, Permissions.LibyanaSimCards.Import)).Succeeded;
        _canExport = (await AuthService.AuthorizeAsync(state.User, Permissions.LibyanaSimCards.Export)).Succeeded;

    }


    // protected override async Task OnInitializedAsync()
    // {
    //     Title = Title = "Libyana SimCards";// L[_currentDto.GetClassDescription()];
    //     _accessRights = await PermissionService.GetAccessRightsAsync<LibyanaSimCardsAccessRights>();

    // }
    private async Task<GridData<LibyanaSimCardDto>> ServerReload(GridState<LibyanaSimCardDto> state)
    {
        try
        {

            _loading = true;
            Query.OrderBy = state.SortDefinitions.FirstOrDefault()?.SortBy ?? "SimCardNo";
            Query.SortDirection = state.SortDefinitions.FirstOrDefault()?.Descending ?? true
                                              ? SortDirection.Descending.ToString()
                                              : SortDirection.Ascending.ToString();
            Query.PageNumber = state.Page + 1;
            Query.PageSize = state.PageSize;
            var result = await Mediator.Send(Query).ConfigureAwait(false);
            return new GridData<LibyanaSimCardDto> { TotalItems = result.TotalItems, Items = result.Items };
        }
        finally
        {
            _loading = false;
        }

    }
    private async Task OnSearch(string text)
    {
        _selectedItems = new HashSet<LibyanaSimCardDto>();
        Query.Keyword = text;
        await _table.ReloadServerData();
    }
    private async Task OnChangedListView(LibyanaSimCardListView listview)
    {
        Query.ListView = listview;
        await _table.ReloadServerData();
    }
    private async Task OnRefresh()
    {
        LibyanaSimCardCacheKey.Refresh();
        _selectedItems = new HashSet<LibyanaSimCardDto>();
        Query.Keyword = string.Empty;
        await _table.ReloadServerData();
    }



    private async Task OnDeleteChecked()
    {
        var contentText = string.Format(ConstantString.DeleteConfirmWithSelected, _selectedItems.Count);
        var command = new DeleteLibyanaSimCardCommand(_selectedItems.Select(x => x.Id).ToArray());
        await DialogServiceHelper.ShowDeleteConfirmationDialogAsync(command, ConstantString.DeleteConfirmationTitle, contentText, async () =>
        {
            await InvokeAsync(async () =>
            {
                await _table.ReloadServerData();
                _selectedItems.Clear();
            });
        });
    }

    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportLibyanaSimCardsQuery()
            {
                Keyword = Query.Keyword,
                ListView = Query.ListView,
                OrderBy = _table.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "SimCardNo",
                SortDirection = _table.SortDefinitions.Values.FirstOrDefault()?.Descending ?? false
                                                ? SortDirection.Descending.ToString()
                                                : SortDirection.Ascending.ToString(),
            };
        var result = await Mediator.Send(request);

                   if (result.Succeeded)
        {
            await BlazorDownloadFileService.DownloadFile($"LibyanaSimCards - {Query.ListView.ToString()}.xlsx", result.Data!, "application/octet-stream");
            Snackbar.Add($"{ConstantString.ExportSuccess}", Severity.Info);
        }
        else
        {
            Snackbar.Add($"{result.ErrorMessage}", Severity.Error);
        }



        _exporting = false;
    }
    private async Task OnImportData(IBrowserFile file)
    {
        _uploading = true;
        var stream = new MemoryStream();
        await file.OpenReadStream().CopyToAsync(stream);
        var command = new ImportLibyanaSimCardsCommand(file.Name, stream.ToArray());
        var result = await Mediator.Send(command);
        if (result.Succeeded)
        {
            await _table.ReloadServerData();
            Snackbar.Add($"{ConstantString.ImportSuccess}", Severity.Info);
        }
        else
        {
            foreach (var msg in result.Errors)
            {
                Snackbar.Add($"{msg}", Severity.Error);
            }
        }
        _uploading = false;
    }

}
