                        </MudItem>
                        <MudItem md="12">
                            <MudTextField Label="@L[model.GetMemberDescription(x=>x.Note)]" @bind-Value="model.Note" For="@(() => model.Note)" />
                        </MudItem>
                    </MudGrid>
                </MudForm>
            </MudCardContent>
            <MudCardActions Class="d-flex justify-end gap-2">
                <MudButton Color="Color.Primary" DropShadow="false" OnClick="Cancel">@ConstantString.Cancel</MudButton>
                <MudLoadingButton Color="Color.Primary" DropShadow="false" Loading="@_saving" OnClick="Save">@ConstantString.Save</MudLoadingButton>
            </MudCardActions>

        </MudCard>
    }
</MudContainer>

