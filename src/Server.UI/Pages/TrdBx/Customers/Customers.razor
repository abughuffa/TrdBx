            });
        });
    }

    private async Task OnExport()
    {
        _exporting = true;
        var request = new ExportCustomersQuery()
            {
                Keyword = Query.Keyword,
                ListView = Query.ListView,
                OrderBy = _table.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "Id",
                SortDirection = _table.SortDefinitions.Values.FirstOrDefault()?.Descending ?? false
                                            ? SortDirection.Descending.ToString()
                                            : SortDirection.Ascending.ToString()
            };
        var result = await Mediator.Send(request);
        await result.Match(
            async data =>
            {
                if (result.Data != null)
                {
                    await BlazorDownloadFileService.DownloadFile($"{L[_currentDto.GetClassDescription()]}.xlsx", result.Data, contentType: "application/octet-stream");
                    Snackbar.Add($"{ConstantString.ExportSuccess}", MudBlazor.Severity.Info);
                }
                else
                {
                    Snackbar.Add($"{ConstantString.ExecuteFail}", MudBlazor.Severity.Error);
                }
            },
            errors =>
            {
                Snackbar.Add($"{errors}", MudBlazor.Severity.Error);
                return Task.CompletedTask;
            });
        _exporting = false;
