@using CleanArchitecture.Blazor.Server.UI.Pages.TrdBx.SimCards
@using CleanArchitecture.Blazor.Application.Features.SimCards.Commands.Create
@using CleanArchitecture.Blazor.Server.UI.Pages.TrdBx.SPackages

@inherits MudComponentBase
@inject IValidationService Validator
@inject IStringLocalizer<SimCards> L
@attribute [Authorize(Policy = Infrastructure.PermissionSet.Permissions.ServicePrices.Create)]

<MudDialog>
    <DialogContent>
        <MudForm Model="@_model" @ref="@_contactForm" Validation="@(Validator.ValidateValue(_model))">
                            <MudGrid Spacing="2">
                    <MudItem md="12">
                        <SPackages @bind-SPackageId="_model.SPackageId"></SPackages>

                    </MudItem>
                    <MudItem md="6">
                        <MudTextField Label="@L[_model.GetMemberDescription(x=>x.SimCardNo)]" @bind-Value="_model.SimCardNo" For="@(() => _model.SimCardNo)" Required="false" RequiredError="@L["SimCardNo is required!"]"></MudTextField>
                    </MudItem>
                    <MudItem md="6">
                        <MudTextField Label="@L[_model.GetMemberDescription(x=>x.ICCID)]" @bind-Value="_model.ICCID" For="@(() => _model.ICCID)" Required="false" RequiredError="@L["ICCID is required!"]"></MudTextField>
                    </MudItem>
                <MudItem md="12">
                    <MudCheckBox Label="@L["Is Owened by Eagle eye?"]"
                                 For="@(() => _model.IsOwen)"
                                 @bind-Value="_model.IsOwen">
                    </MudCheckBox>
                </MudItem>

                    <MudItem md="2"></MudItem>
                    <MudItem md="8">
                        <MudDatePicker Class="pa-4"
                        PickerVariant="PickerVariant.Dialog"
                        Label="@L["ExDate"]"
                        Editable @bind-Date="_date"
                        For="@(() => _date)" />
                    </MudItem>
                    <MudItem md="2"></MudItem>
                </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudLoadingButton Loading="@_savingnew" OnClick="OnSaveAndNew">@ConstantString.SaveAndNew</MudLoadingButton>
        <MudLoadingButton Loading="@_saving" OnClick="OnSave">@ConstantString.Save</MudLoadingButton>
        <MudButton OnClick="Cancel">@ConstantString.Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    MudForm _contactForm = new();
    private bool _saving = false;
    private bool _savingnew = false;
    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; } = default!;
    [EditorRequired][Parameter] public CreateSimCardCommand _model { get; set; } = null!;

    private DateTime? _date
    {

        get => _model.ExDate is null ? null : ((DateOnly)_model.ExDate).ToDateTime(TimeOnly.MinValue);

        set { _model.ExDate = value is null ? null : DateOnly.FromDateTime((DateTime)value); }

    }

    async Task OnSave()
    {
        try
        {
            _saving = true;
            await _contactForm.Validate().ConfigureAwait(false);
            if (!_contactForm.IsValid)
                return;
            var result = await Mediator.Send(_model);
            result.Match(
data =>
{
Snackbar.Add(ConstantString.SaveSuccess, MudBlazor.Severity.Info);
MudDialog.Close(DialogResult.Ok(true));
return data;
},
errors =>
{
Snackbar.Add(errors, MudBlazor.Severity.Error);
return -1;
});
            // result.Match(data =>
            // {
            //     MudDialog.Close(DialogResult.Ok(true));
            //     Snackbar.Add(ConstantString.SaveSuccess, MudBlazor.Severity.Info);
            // }, errors =>
            // {
            //     Snackbar.Add(errors, MudBlazor.Severity.Error);
            // });
        }
        finally
        {
            _saving = false;
        }
    }

    async Task OnSaveAndNew()
    {
        try
        {
            _savingnew = true;
            await _contactForm.Validate().ConfigureAwait(false);
            if (!_contactForm.IsValid)
               return;
            var result = await Mediator.Send(_model);
            await result.MatchAsync(async data =>
            {
                Snackbar.Add(ConstantString.SaveSuccess, MudBlazor.Severity.Info);
                await Task.Delay(300);
                _model = new CreateSimCardCommand() {SPackageId =_model.SPackageId, ExDate=_model.ExDate,IsOwen=_model.IsOwen };
                return data;
            }, errors =>
            {
                Snackbar.Add(errors, MudBlazor.Severity.Error);
                return Task.FromResult(-1);
            });
        }
        finally
        {
            _savingnew = false;
        }
    }

    void Cancel() => MudDialog.Cancel();
}
