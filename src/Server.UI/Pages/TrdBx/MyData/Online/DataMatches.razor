@page "/pages/TrdBx/MyData/Online/DataMatches"

@using CleanArchitecture.Blazor.Application.TrdBx.Features.MyData.Online.DataMatches.Caching
@using CleanArchitecture.Blazor.Application.TrdBx.Features.MyData.Online.DataMatches.DTOs
@using CleanArchitecture.Blazor.Application.TrdBx.Features.MyData.Online.DataMatches.Queries.Export
@using CleanArchitecture.Blazor.Application.TrdBx.Features.MyData.Online.DataMatches.Queries.Pagination
@using CleanArchitecture.Blazor.Application.TrdBx.Features.MyData.Online.DataMatches.Specifications
@using CleanArchitecture.Blazor.Server.UI.Pages.TrdBx.MyData.Online.Components
@using CleanArchitecture.Blazor.Domain.Enums

@inject IStringLocalizer<DataMatches> L
@attribute [Authorize(Policy = Infrastructure.PermissionSet.Permissions.DataMatches.View)]

<PageTitle>@Title</PageTitle>

<AdvancedSearchDbMatchings TRequest="Query" OnConditionChanged="ConditionChanged"></AdvancedSearchDbMatchings>



<MudDataGrid ServerData="@(ServerReload)"
             FixedHeader="true"
             FixedFooter="false"
             @bind-RowsPerPage="_defaultPageSize"
             Loading="@_loading"
             MultiSelection="true"
             @bind-SelectedItems="_selectedItems"
             ColumnResizeMode="ResizeMode.Column"
             Hover="true" @ref="_table"
             RowStyleFunc="@rowStyleFunc">

    <ToolBarContent>
        <MudStack Row Spacing="0" Class="flex-grow-1" Justify="Justify.SpaceBetween">
            <MudStack Row AlignItems="AlignItems.Start">
                <MudIcon Icon="@Icons.Material.Filled.Window" Size="Size.Large" />
                <MudStack Spacing="0">
                    <MudText Typo="Typo.subtitle2" Class="mb-2">@Title</MudText>
                    <MudEnumSelect Style="min-width:120px" TEnum="DataMatchListView" ValueChanged="OnChangedListView" Value="Query.ListView" Dense="true" Label="@ConstantString.ListView">
                    </MudEnumSelect>
                </MudStack>
            </MudStack>
            <MudStack Spacing="0" AlignItems="AlignItems.End">
                <MudToolBar Dense WrapContent="true" Class="py-1 px-0">
                    <MudButton Disabled="@_loading"
                               OnClick="@(() => OnRefresh())"
                               StartIcon="@Icons.Material.Outlined.Refresh">
                        @ConstantString.Refresh
                    </MudButton>
                    @if (_canExport)
                    {
                        <MudLoadingButton Disabled="@_exporting"
                                          Loading="_exporting"
                                          OnClick="@(() => OnExport())"
                                          StartIcon="@Icons.Custom.FileFormats.FileExcel">
                            @ConstantString.Export
                        </MudLoadingButton>
                    }
                </MudToolBar>
                <MudStack Row Spacing="1">
@*                     @if (_canSearch)
                    { *@
                        <MudTextField T="string" ValueChanged="@(s => OnSearch(s))" Value="@Query.Keyword" Placeholder="@ConstantString.Search" Adornment="Adornment.End"
                                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Small">
                        </MudTextField>
                    @* } *@
                </MudStack>
            </MudStack>
        </MudStack>
    </ToolBarContent>
    <Columns>
        <SelectColumn ShowInFooter="false"></SelectColumn>

        @*TODO: Define the fields that should be displayed in data table*@
        <PropertyColumn Property="x => x.WUnitSNo" Title="@L[_currentDto.GetMemberDescription(x=>x.WUnitSNo)]" />
        <PropertyColumn Property="x => x.WSimCardNo" Title="@L[_currentDto.GetMemberDescription(x=>x.WSimCardNo)]" />
        <PropertyColumn Property="x => x.TUnitSNo" Title="@L[_currentDto.GetMemberDescription(x=>x.TUnitSNo)]"/>
        <PropertyColumn Property="x => x.TSimCardNo" Title="@L[_currentDto.GetMemberDescription(x=>x.TSimCardNo)]" />
        <PropertyColumn Property="x => x.StatusOnWialon" Title="@L[_currentDto.GetMemberDescription(x=>x.StatusOnWialon)]" Groupable="true" />
        <PropertyColumn Property="x => x.StatusOnTrdBx" Title="@L[_currentDto.GetMemberDescription(x=>x.StatusOnTrdBx)]" Groupable="true" />
        <PropertyColumn Property="x => x.Account" Title="@L[_currentDto.GetMemberDescription(x=>x.Account)]" Groupable="true" />
        <PropertyColumn Property="x => x.Client" Title="@L[_currentDto.GetMemberDescription(x=>x.Client)]" Groupable="true" />
        <PropertyColumn Property="x => x.Customer" Title="@L[_currentDto.GetMemberDescription(x=>x.Customer)]" Groupable="true" />
        <PropertyColumn Property="x => x.WNote" Title="@L[_currentDto.GetMemberDescription(x=>x.WNote)]" />



    </Columns>
    <NoRecordsContent>
        <MudText>@ConstantString.NoRecords</MudText>
    </NoRecordsContent>
    <LoadingContent>
        <MudText>@ConstantString.Loading</MudText>
    </LoadingContent>
    <PagerContent>
        <MudDataGridPager PageSizeOptions="@(new int[]{15,50,100,500,1000,1500,2000,2500})" />
    </PagerContent>
</MudDataGrid>



@code {

    [CascadingParameter]
    private Task<AuthenticationState> AuthState { get; set; } = default!;
    [CascadingParameter]
    private UserProfile? UserProfile { get; set; }
    public string? Title { get; private set; }
    private HashSet<DataMatchDto> _selectedItems = new();
    private MudDataGrid<DataMatchDto> _table = default!;
    private DataMatchDto _currentDto = new();
    // private DataMatchsAccessRights _accessRights = new();
    private int _defaultPageSize = 15;
    private bool _loading;
    private bool _exporting;

    private DataMatchesWithPaginationQuery Query { get; set; } = new();


    private void ConditionChanged(string s)
    {
        InvokeAsync(_table.ReloadServerData);
    }
    private Func<DataMatchDto, int, string> rowStyleFunc => (x, i) =>
    {
        if ((x.StatusOnWialon == WStatus.Active && x.StatusOnTrdBx == UStatus.InstalledActive)
         || (x.StatusOnWialon == WStatus.Active && x.StatusOnTrdBx == UStatus.InstalledActiveGprs)
         || (x.StatusOnWialon == WStatus.Inactive && x.StatusOnTrdBx == UStatus.InstalledActiveHosting))
            return "background-color:#d6ffff";
        else if ((x.StatusOnWialon == WStatus.Active && x.StatusOnTrdBx == UStatus.InstalledActiveHosting)
         || (x.StatusOnWialon == WStatus.Active && x.StatusOnTrdBx == UStatus.InstalledInactive)
         || (x.StatusOnWialon == WStatus.Inactive && x.StatusOnTrdBx == UStatus.InstalledInactive))
            return "background-color:#ffff8a";
        else if (x.StatusOnWialon == WStatus.Inactive && x.StatusOnTrdBx == UStatus.InstalledInactive)
                return "background-color:#FFD6FF";
        else
            return "background-color:#ffffff";
    };
    [Inject]
    private IBlazorDownloadFileService BlazorDownloadFileService { get; set; } = null!;

    private bool _canExport;
    // private bool _canSearch;
    // private bool _canDelete;


    protected override async Task OnInitializedAsync()
    {
        Title = L[_currentDto.GetClassDescription()];
        var state = await AuthState;
        _canExport = (await AuthService.AuthorizeAsync(state.User, Permissions.DataMatches.Export)).Succeeded;
        // _canSearch = (await AuthService.AuthorizeAsync(state.User, Permissions.DataMatches.Search)).Succeeded;
        // _canDelete = (await AuthService.AuthorizeAsync(state.User, Permissions.DataMatchs.Delete)).Succeeded;


    }
    // protected override async Task OnInitializedAsync()
    // {
    //     Title = Title = "Database Matching";// L[_currentDto.GetClassDescription()];
    //     _accessRights = await PermissionService.GetAccessRightsAsync<DataMatchsAccessRights>();

    // }
    private async Task<GridData<DataMatchDto>> ServerReload(GridState<DataMatchDto> state)
    {
        try
        {
            _loading = true;
            Query.OrderBy = state.SortDefinitions.FirstOrDefault()?.SortBy ?? "WUnitSNo";
            Query.SortDirection = state.SortDefinitions.FirstOrDefault()?.Descending ?? true
                                              ? SortDirection.Descending.ToString()
                                              : SortDirection.Ascending.ToString();
            Query.PageNumber = state.Page + 1;
            Query.PageSize = state.PageSize;
            var result = await Mediator.Send(Query).ConfigureAwait(false);
            return new GridData<DataMatchDto> { TotalItems = result.TotalItems, Items = result.Items };

        }
        finally
        {
            _loading = false;
        }

    }
    private async Task OnSearch(string text)
    {
        _selectedItems = new HashSet<DataMatchDto>();
        Query.Keyword = text;
        await _table.ReloadServerData();
    }
    private async Task OnChangedListView(DataMatchListView listview)
    {
        Query.ListView = listview;
        await _table.ReloadServerData();
    }
    private async Task OnRefresh()
    {
        DataMatchCacheKey.Refresh();
        _selectedItems = new HashSet<DataMatchDto>();
        Query.Keyword = string.Empty;
        await _table.ReloadServerData();
    }


    private async Task OnExport()
    {
        _exporting = true;

        var request = new ExportDataMatchesQuery()
            {
                Keyword = Query.Keyword,
                ListView = Query.ListView,
                StatusOnWialon = Query.StatusOnWialon,
                StatusOnTrdBx = Query.StatusOnTrdBx,
                OrderBy = _table.SortDefinitions.Values.FirstOrDefault()?.SortBy ?? "WUnitSNo",
                SortDirection = _table.SortDefinitions.Values.FirstOrDefault()?.Descending ?? false
                                            ? SortDirection.Descending.ToString()
                                            : SortDirection.Ascending.ToString(),

            };

        var result = await Mediator.Send(request);

             if (result.Succeeded)
        {
            await BlazorDownloadFileService.DownloadFile($"DataMatchs - {Query.ListView.ToString()}.xlsx", result.Data!, "application/octet-stream");
            Snackbar.Add($"{ConstantString.ExportSuccess}", Severity.Info);
        }
        else
        {
            Snackbar.Add($"{result.ErrorMessage}", Severity.Error);
        }


        _exporting = false;
    }


}
